<html>
    <head>
        <META HTTP-EQUIV="Content-Style-Type" CONTENT="text/css">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        
        <style type="text/css">

            html,body {overflow: visible !important; color: black !important; border-style: none !important; border-color:black !important;font-size: 12px!important;}
            div .table-responsive {overflow: visible !important; border-style: none !important}

            .panel{ margin: 8px;}
            .panel-info > .panel-heading,.titulo_vista {
                background-color: white;
                font-size: 12px;
                border-color: black;
                color: black;
                font-weight: bold;
                border-style: none !important;
                padding: 2px 5px;
            }
            table{font-size: 10px!important;}
            .panel-body, .vista_paciente{font-size: 10px; border-style: none !important;}
            td,th {padding: 2px 5px;}
            .panel-info{border-color:black}
            table {width: 100%}

        </style>
    </head>
    <body>
        <table width="100%" style="border-collapse: collapse;">
            <tr>
                <td colspan="2" align="center">{{ empresa.nombre }}</td>
            </tr>
            <tr>
                <td colspan="2" align="center">Reporte Diario de ventas</td>
            </tr>
        </table>
        <table width="100%" style="border-collapse: collapse;">
            <tr>
                <td>TIPO</td>
                <td>NUMERO</td>
                <td>FECHA</td>
                <td>CLIENTE</td>
                <td>CONDICION</td>
                <td>SUB-TOTAL</td>
                <td>DESC</td>
                <td>VENTA-NETA</td>
                <td>IVA</td>
                <td>TOTAL</td>
            </tr>
                {% set subtotal = 0 %}
                {% set descuento = 0 %}
                {% set ventaneta = 0 %}
                {% set iva = 0 %}
                {% set total = 0 %}
                {% set total_contado = 0 %}
                {% set total_creditos = 0 %}
            {% for mov in movimientos %}
                {% set subtotal = subtotal + mov.subtotal %}
                {% set descuento = descuento + mov.descuento %}
                {% set ventaneta = ventaneta + mov.ventaneta %}
                {% set iva = iva + mov.iva %}
                {% set total = total + mov.total %}
                {% if mov.id_condicionpago == 1 %}
                    {% set total_contado = total_contado + mov.total %}
                {% else %}
                    {% set total_creditos = total_creditos + mov.total %}
                {% endif %}
                <tr>
                    <td>{{ mov.tipo }}</td>
                    <td>{{ mov.numero }}</td>
                    <td>{{ mov.fecha | date('d/m/Y')}}</td>
                    <td>{{ mov.cliente }}</td>
                    <td>{{ mov.condicion }}</td>
                    <td>{{ mov.subtotal | number_format(2, '.', ',')}}</td>
                    <td>{{ mov.descuento | number_format(2, '.', ',')}}</td>
                    <td>{{ mov.ventaneta  | number_format(2, '.', ',') }}</td>
                    <td>{{ mov.iva  | number_format(2, '.', ',') }}</td>
                    <td>{{ mov.total  | number_format(2, '.', ',') }}</td>
                </tr>
            {% endfor %}
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>======</td>
                <td>======</td>
                <td>======</td>
                <td>======</td>
                <td>======</td>
            </tr>
            <tr>
                <td>SUMAS</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>{{ subtotal  | number_format(2, '.', ',') }}</td>
                <td>{{ descuento  | number_format(2, '.', ',') }}</td>
                <td>{{ ventaneta  | number_format(2, '.', ',') }}</td>
                <td>{{ iva  | number_format(2, '.', ',') }}</td>
                <td>{{ total  | number_format(2, '.', ',') }}</td>
            </tr>
            
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>RESUMEN</td>
                <td>Total contado</td>
                <td>{{ total_contado  | number_format(2, '.', ',') }}</td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>Total cr√©ditos</td>
                <td>{{ total_creditos  | number_format(2, '.', ',') }}</td>
            </tr>
            
        </table>
    </body>
</html>